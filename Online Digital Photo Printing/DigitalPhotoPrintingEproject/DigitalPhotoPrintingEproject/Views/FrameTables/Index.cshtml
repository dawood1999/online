@model IEnumerable<DigitalPhotoPrintingEproject.Models.FrameTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="width: 77%;margin-left: 290px;" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.f_Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.f_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.f_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.f_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.f_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <img src="@Url.Content(item.f_Image)" alt="Alternate Text" width="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.f_Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.f_Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.f_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.f_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.f_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.f_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.f_Id })
                </td>
            </tr>
        }
    </tbody>
</table>
